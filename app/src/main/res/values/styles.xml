<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="headingText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/headingText</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="headingText1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/headingText1</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="subHeadingText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/subHeadingText</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="bodyText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/bodyText</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="recipeSubHeadingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bodyText</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="subBodyText">
        <item name="android:textColor">@color/subText</item>
        <item name="android:textSize">@dimen/subText</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="categoryTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="actionBarBackGround" parent="Widget.Design.TabLayout">
        <item name="background">@color/primary</item>
        <item name="tabIndicatorColor">@color/colorOnPrimaryDark</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabRippleColor">@color/colorOnPrimaryLight</item>
        <item name="tabSelectedTextColor">@color/colorOnPrimaryDark</item>
    </style>

    <style name="customTabTextColor" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorOnPrimaryDark</item>
    </style>

    <style name="DetailsActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDark</item>
        <item name="colorControlNormal">@color/colorOnPrimaryDark</item>
        <item name="android:statusBarColor">@color/primaryLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>